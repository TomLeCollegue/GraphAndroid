<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddRelation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/noeud1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premier Noeud" />

        <Spinner
            android:id="@+id/spinner_n1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relation" />

        <EditText
            android:id="@+id/edit_text_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/noeud2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deuxieme Noeud" />

        <Spinner
            android:id="@+id/spinner_n2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_add_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajouter la Relation" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>