<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Path2Nodes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#b4ffff"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_first_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80deea"
                android:padding="5dp"
                android:text="Premier Noeud"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_first_node"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <TextView
                android:id="@+id/text_second_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80deea"
                android:padding="5dp"
                android:text="Deuxieme Noeud"
                android:textSize="20dp" />

            <Spinner
                android:id="@+id/spinner_second_node"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/button_search_node"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Chercher le chemin le plus court" />
        </LinearLayout>

        <TextView
            android:id="@+id/boolean_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80deea"
            android:gravity="center_horizontal"
            android:textSize="25dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_path"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>