<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Path2Nodes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_first_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Premier Noeud" />

        <Spinner
            android:id="@+id/spinner_first_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_second_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deuxieme Noeud" />

        <Spinner
            android:id="@+id/spinner_second_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_search_node"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chercher le chemin le plus court" />

        <TextView
            android:id="@+id/boolean_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chemin TrouvÃ©" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_path"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>